  <import namespace="http://xmlns.anzsoil.org/ANZSoilML-Core/1.0.0" schemaLocation="http://anzsoil.org/anzsoilml-core/1.0.0/schema/anzsoilml-core.xsd"/>
  <import namespace="http://xmlns.anzsoil.org/ANZSoilML-Soil/1.0.0" schemaLocation="http://anzsoil.org/anzsoilml-soil/1.0.0/schema/anzsoilml-soil.xsd"/>
  <import namespace="http://xmlns.anzsoil.org/ANZSoilML-SoilSample/1.0.0" schemaLocation="http://anzsoil.org/anzsoilml-soilsample/1.0.0/schema/anzsoilml-soilsample.xsd"/>
</schema>
