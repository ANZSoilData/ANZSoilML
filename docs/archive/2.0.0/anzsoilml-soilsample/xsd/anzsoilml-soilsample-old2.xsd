	<xs:annotation>
		<xs:documentation>Application Schema for soil sampling, soil specimens and related observations</xs:documentation>
	</xs:annotation>
	<xs:element name="SoilSample" type="anzsmlss:SoilSampleType" substitutionGroup="sams:SF_SpatialSamplingFeature">
		<xs:annotation>
			<xs:documentation>A specialisation of SF_SpatialSamplingFeature to allow the depth at which the sample was taken and the size of the sample.</xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:complexType name="SoilSampleType">
		<xs:complexContent>
			<xs:extension base="sams:SF_SpatialSamplingFeatureType">
				<xs:sequence>
					<xs:element name="lowerDepth" nillable="true">
						<xs:annotation>
							<xs:documentation>To specify the lower depth that the sample was taken from</xs:documentation>
						</xs:annotation>
						<xs:complexType>
							<xs:complexContent>
								<xs:extension  base="gml:MeasureType">
									<xs:attributeGroup ref="gml:AssociationAttributeGroup"/>
								<!--	<xs:attribute name="nilReason" type="gml:NilReasonType"/> -->
								</xs:extension>
								
								
							</xs:complexContent>
						</xs:complexType>
					</xs:element>
					<xs:element name="upperDepth" nillable="true">
						<xs:annotation>
							<xs:documentation>To specify the upper depth that the sample was taken from</xs:documentation>
						</xs:annotation>
						<xs:complexType>
							<xs:complexContent>
								<xs:extension  base="gml:MeasureType">
									<xs:attributeGroup ref="gml:AssociationAttributeGroup"/>
								<!--	<xs:attribute name="nilReason" type="gml:NilReasonType"/> -->
								</xs:extension>
							</xs:complexContent>
						</xs:complexType>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="SoilSamplePropertyType">
		<xs:sequence minOccurs="0">
			<xs:element ref="anzsmlss:SoilSample"/>
		</xs:sequence>
		<xs:attributeGroup ref="gml:AssociationAttributeGroup"/>
		<xs:attributeGroup ref="gml:OwnershipAttributeGroup"/>
	</xs:complexType>
	<xs:element name="SoilSpecimen" type="anzsmlss:SoilSpecimenType" substitutionGroup="spec:SF_Specimen">
		<xs:annotation>
			<xs:documentation>A specialisation of SF_Specimen to capture archived specimens. 
NatSoil archive indicates whether there is a coarse fraction (&gt;2mm) present in the specimen.</xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:complexType name="SoilSpecimenType">
		<xs:complexContent>
			<xs:extension base="spec:SF_SpecimenType">
				<xs:sequence>
					<xs:element name="coarseFragmentsPresent" type="xs:boolean" minOccurs="0" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>Presence or absence of coarse fragment sample &gt;2mm</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="SoilSpecimenPropertyType">
		<xs:sequence>
			<xs:element ref="anzsmlss:SoilSpecimen"/>
		</xs:sequence>
		<xs:attributeGroup ref="gml:AssociationAttributeGroup"/>
		<xs:attributeGroup ref="gml:OwnershipAttributeGroup"/>
	</xs:complexType>
</xs:schema>
